<h1>Bookings#index</h1>
<p>Find me in app/views/bookings/index.html.erb</p>

<div class="row">
  <% @bookings.each do |booking|  %>
  <div class="card mb-3 col-6">
    <div class="row g-0">
      <div class="col-md-4">
        <%= cl_image_tag(booking.spaceship.photo.key, width: 200, heigth: 100)%>
      </div>
      <div class="col-md-8 p-3">
        <div class="card-body">
          <h2 class="card-title"><%= booking.spaceship.name %></h2>
          <h6 class="card-text">From: <%=booking.start_date %></h6>
          <h6 class="card-text">To: <%=booking.end_date %></h6>
          <h6 class="card-text"><%= booking.status.capitalize %></h6>
          <%# <%= link_to "Confirm", booking_path(booking), class: "btn btn-primary", method: :patch %>
          <%= link_to "Confirm", booking_path(booking), data: {turbo_method: :patch, turbo_confirm: "Are you sure?"}, class: "btn btn-primary", value:"1" %>
          <button type="button" class="btn btn-success <%= booking.status == "pending" ? "" : "d-none"%>">Confirm</button>
          <button type="button" class="btn btn-danger <%= booking.status == "pending" ? "" : "d-none"%>">Refuse</button>
          <button type="button" class="btn btn-danger <%= booking.status == "booked" ? "" : "d-none"%>">Cancel</button>
        </div>
      </div>
    </div>
  </div>


  <% end %>
</div>
