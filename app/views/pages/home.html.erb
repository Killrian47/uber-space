<figure class="d-flex w-100 mt-4 position-relative">
  <%= image_tag "homepage/hero.avif", alt: "Image", class: "w-100 homepage-hero rounded-4" %>
  <div class="opacity-layer"></div>
  <figcaption class="position-absolute text-white p-4">
    <h1 class="display-1">Rent your <span class="text-black">spaceship</span></h1>
    <p class="lead">Explore the galaxy like never before.</p>
    <%= link_to "See all spaceships", spaceships_path, class: "btn btn-outline-light btn-lg mt-4" %>
  </figcaption>
  <%# <h1 class="position-absolute text-white w-100 display-1 p-4">Rent your spaceship</h1> %>
</figure>
<h2 class="my-4">Latest Spaceships</h2>
<div class="row">
  <% @spaceships.each do |spaceship| %>
    <div class="col-12 col-md-6 col-lg-3">
      <%= render "spaceships/spaceship", spaceship: spaceship %>
    </div>
  <% end %>
</div>
