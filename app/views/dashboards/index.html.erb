<%# Title %>
<div class="d-flex justify-content-between align-items-center">
  <h1 class="my-5">Dashboard</h1>
  <nav>
    <div class="nav mb-3" id="nav-tab" role="tablist">
      <button class="nav-link active text-black" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Customer</button>
      <button class="nav-link text-gold" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Pro</button>
    </div>
  </nav>
</div>
<%# Tabs %>
<div class="container-fluid p-4 bookings-container">
  <div class="row">
    <div class="col">
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade active show" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>My current rentals</h2>
            <%# <button class="btn btn-primary" data-toggle="modal" data-target="#newSpaceShipModal">Explore spaceships</button> %>
            <%= link_to "Explore spaceships", spaceships_path, class: "btn btn-primary" %>
          </div>
          </div>
          <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="d-flex justify-content-between align-items-center mb-4">
             <h2>My spaceships</h2>
            <%# <button class="btn btn-secondary" data-toggle="modal" data-target="#newSpaceShipModal">Add a spaceship</button> %>
            <%= link_to "Add a spaceship", new_spaceship_path, class: "btn btn-secondary" %>
          </div>
          <div class="row">
            <% @spaceships.each do |spaceship| %>
            <div class="col-12 col-md-6 col-lg-4 mb-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= spaceship.name %></h5>
                  <p class="card-text"><%= spaceship.description %></p>
                  <a href="<%= spaceship_path(spaceship) %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
