            <% @bookings.each do |booking|  %>
              <div class="card mb-3 col-6">
                <div class="row g-0">
                  <div class="col-md-4">
                    <%= cl_image_tag(booking.spaceship.photo.key, width: 200, heigth: 100)%>
                  </div>
                  <div class="col-md-8 p-3">
                    <div class="card-body">
                      <h2 class="card-title"><%= booking.spaceship.name %></h2>
                      <h6 class="card-text">From: <%=booking.start_date %></h6>
                      <h6 class="card-text">To: <%=booking.end_date %></h6>
                      <h6 class="card-text"><%= booking.status.capitalize %></h6>
                      <% booking.associated_buttons_status.each do |button| %>
                        <%= link_to button[:text], dashboards_path, data: {turbo_method: :patch}, class: button[:classes] %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>My spaceships</h2>
            <%= link_to "Add a spaceship", new_spaceship_path, class: "btn btn-success" %>
          </div>
          <div class="row">
            <% @spaceships.each do |spaceship| %>
              <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card mb-4 shadow-sm">
                  <%= cl_image_tag spaceship.photo.key, class: "card-img-top" %>
                  <div class="card-body">
                    <h5 class="card-title"><%= spaceship.name %></h5>
                    <h5 class="card-title text-success">
                      <%= spaceship.name %>
                    </h5>
                    <p class="card-text"><%= spaceship.description %></p>
                    <div class="d-flex justify-content-between mt-3">
                      <h6><i class="fa-solid fa-radiation"></i> <%= spaceship.fuel %></h6>
                      <h6><i class="fa-solid fa-user-group"></i> <%= spaceship.number_of_places %></h6>
                      <h6><i class="fa-regular fa-gem"></i> <%= spaceship.price_per_day %>$ / day</h6>
                    </div>
                    <a href="#" class="btn btn-primary mt-4">View</a>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My current rentals</h2>
    <%= link_to "Explore spaceships", spaceships_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card">
          <div class="card-body">
            <%# <h5 class="card-title"><%= booking.spaceship.name %></h5>
          <%= cl_image_tag booking.spaceship.photo.key, class: "img-card-top" %>
          <p class="card-text"><%= booking.spaceship.name %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
</div>
</div>
