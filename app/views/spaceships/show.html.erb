<h1 class="my-3"><%= @spaceship.name %></h1>
<div class="container-fluid">
  <div class="row mb-5 gap-5 images-container">
    <div class="col-7 h-100 p-0">
      <div class="spaceship-image-detail">
        <img class="rounded" src="<%= url_for(@spaceship.main_image) %>" alt="" height="400">
      </div>
    </div>
    <div class="col p-0">
      <div class="d-flex justify-content-between h-100 flex-row flex-wrap gap-2">
        <img class="rounded four-images col-5" src="https://images.unsplash.com/photo-1588609889709-09a65ef625d9?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTZ8fG1pbGxlbml1bSUyMGZhbGNvbnxlbnwwfHwwfHx8MA%3D%3D" alt="">
        <img class="rounded four-images col-5" src="https://images.unsplash.com/photo-1477005264461-b0e201668d92?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTZ8fG1pbGxlbml1bSUyMGZhbGNvbiUyMHN0YXIlMjB3YXJzfGVufDB8fDB8fHww" alt="">
        <img class="rounded four-images col-5" src="https://images.unsplash.com/photo-1586311474828-5d7e8e4da349?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8bWlsbGVuaXVtJTIwZmFsY29uJTIwc3RhciUyMHdhcnN8ZW58MHx8MHx8fDA%3D" alt="">
        <img class="rounded four-images col-5" src="https://images.unsplash.com/photo-1598501479146-ef2b41258663?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTV8fG1pbGxlbml1bSUyMGZhbGNvbiUyMHN0YXIlMjB3YXJzfGVufDB8fDB8fHww" alt="">
      </div>
    </div>
  </div>
  <div class="row justify-content-between align-items-center">
    <div class="col-4">
      <div class="row">
        <div class="col-4 text-center">
          <i class="fa-solid fa-circle-radiation"></i>
          <p><%= @spaceship.fuel %></p>
        </div>
        <div class="col-4 text-center">
          <i class="fa-solid fa-users"></i>
          <p class=""><%= @spaceship.number_of_places %></p>
        </div>
        <div class="col-4 text-center">
          <i class="fa-solid fa-dollar-sign"></i>
          <p class=""><%= @spaceship.price_per_day %>/day</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-8">
      <div class="col-12 d-flex align-items-center gap-3">
        <% if @spaceship.user.photo.attached? %>
        <%= cl_image_tag(@spaceship.user.photo.key, class: "rounded-circle", width: 75, height: 75, crop: :fill) %>
        <% else %>
        <img class="rounded-circle" src="https://images.unsplash.com/photo-1464802686167-b939a6910659?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Z2FsYXh5fGVufDB8fDB8fHww" alt="" width="75" height="75">
        <% end %>
        <div>
          <h2 class="m-0"><%= @spaceship.user.name %></h2>
          <p>Spaceship owner</p>
        </div>
      </div>
      <div class="container my-5">
        <div class="col-12">
          <h2>Description</h2>
          <p><%= @spaceship.description %></p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <h4>Book the spaceship</h4>
      <%= render "bookings/form", spaceship: @spaceship, booking: @booking %>
    </div>
  </div>
</div>
